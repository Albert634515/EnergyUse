<Window x:Class="WpfUI.Views.Windows.PredefinedPeriodsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:uc="clr-namespace:WpfUI.Views.Controls"
        Title="Predefined Periods"
        Width="1100"
        Height="650"
        WindowStartupLocation="CenterOwner">

    <DockPanel>

        <!-- TOOLBAR -->
        <ToolBar DockPanel.Dock="Top">
            <Button Command="{Binding AddCommand}">
                <Image Source="/Resources/add_24x24.png" Width="20"/>
            </Button>
            <Button Command="{Binding SaveCommand}">
                <Image Source="/Resources/tick-mark_24x24.png" Width="20"/>
            </Button>
            <Button Command="{Binding CancelCommand}">
                <Image Source="/Resources/clear_24x24.png" Width="20"/>
            </Button>
            <Button Command="{Binding DeleteCommand}">
                <Image Source="/Resources/delete_24x24.png" Width="20"/>
            </Button>
            <Button Command="{Binding RefreshCommand}">
                <Image Source="/Resources/clock_24x24.png" Width="20"/>
            </Button>

            <Separator/>

            <Button Command="{Binding CloseCommand}">
                <Image Source="/Resources/crossed_24x24.png" Width="20"/>
            </Button>
        </ToolBar>

        <!-- MAIN CONTENT -->
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- DATAGRID -->
            <DataGrid Grid.Column="0"
                      ItemsSource="{Binding PredefinedPeriods}"
                      SelectedItem="{Binding SelectedPeriod, Mode=TwoWay}"
                      AutoGenerateColumns="False"
                      Margin="0,0,10,0">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="80"/>
                    <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="200"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- RIGHT SIDE USERCONTROL -->
            <uc:DatePredefinedControl Grid.Column="1"
                          DataContext="{Binding DatePredefinedVM}"
                          SelectedPeriodId="{Binding SelectedPeriodId}" />
        </Grid>
    </DockPanel>
</Window>