<Window x:Class="EnergyUse.Wpf.Views.ExportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Export"
        Height="420"
        Width="650"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- Icons -->
        <BitmapImage x:Key="IconClose" UriSource="/Resources/crossed_24x24.png"/>
        <BitmapImage x:Key="IconExport" UriSource="/Resources/upload_24x24.png"/>
        <BitmapImage x:Key="IconOpenFile" UriSource="/Resources/open-file-icon.png"/>
    </Window.Resources>

    <DockPanel>

        <!-- Toolbar -->
        <ToolBar DockPanel.Dock="Top">
            <Button Command="{Binding CloseCommand}">
                <Image Source="{StaticResource IconClose}" Width="20"/>
            </Button>
        </ToolBar>

        <!-- Statusbar -->
        <StatusBar DockPanel.Dock="Bottom">
            <TextBlock Text="{Binding StatusMessage}" />
        </StatusBar>

        <!-- Content -->
        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Address -->
            <TextBlock Text="Address" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
            <ComboBox Grid.Row="0" Grid.Column="1"
                      ItemsSource="{Binding Addresses}"
                      SelectedItem="{Binding SelectedAddress}"
                      DisplayMemberPath="Description"
                      Width="250"/>

            <!-- Energy Type -->
            <TextBlock Text="Energy Type" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
            <ComboBox Grid.Row="1" Grid.Column="1"
                      ItemsSource="{Binding EnergyTypes}"
                      SelectedItem="{Binding SelectedEnergyType}"
                      DisplayMemberPath="Name"
                      Width="250"/>

            <!-- Export file -->
            <TextBlock Text="Export file" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"/>
            <TextBox Grid.Row="2" Grid.Column="1"
                     Text="{Binding ExportFileName}"
                     Width="250"/>
            <Button Grid.Row="2" Grid.Column="2"
                    Command="{Binding SelectExportFileCommand}">
                <Image Source="{StaticResource IconOpenFile}" Width="20"/>
            </Button>

            <!-- Range -->
            <TextBlock Text="Range" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center"/>
            <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" Margin="0,0,20,0">
                <RadioButton Content="All"
                             IsChecked="{Binding ExportAll}"/>
                <RadioButton Content="Selected range"
                             IsChecked="{Binding ExportSelectedRange}"/>
            </StackPanel>

            <!-- Date range -->
            <TextBlock Text="From" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center"/>
            <DatePicker Grid.Row="4" Grid.Column="1"
                        SelectedDate="{Binding DateFrom}"
                        Width="150"/>

            <TextBlock Text="Till" Grid.Row="5" Grid.Column="0" VerticalAlignment="Center"/>
            <DatePicker Grid.Row="5" Grid.Column="1"
                        SelectedDate="{Binding DateTill}"
                        Width="150"/>

            <!-- Export button -->
            <Button Grid.Row="5" Grid.Column="2"
                    Command="{Binding ExportCommand}"
                    Margin="10,0,0,0">
                <StackPanel Orientation="Horizontal">
                    <Image Source="{StaticResource IconExport}" Width="20"/>
                    <TextBlock Text="Export" Margin="5,0,0,0"/>
                </StackPanel>
            </Button>

        </Grid>
    </DockPanel>
</Window>