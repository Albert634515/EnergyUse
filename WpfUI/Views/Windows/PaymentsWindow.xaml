<Window x:Class="WpfUI.Views.Windows.PaymentsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:WpfUI.ViewModels"
        Title="Payments"
        Height="650" Width="900">

    <DockPanel>

        <!-- Toolbar -->
        <ToolBar DockPanel.Dock="Top">

            <Button Command="{Binding AddCommand}">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/WpfUI;component/Resources/add_24x24.png"
                           Width="20" Height="20"/>
                    <TextBlock Text="Add" Margin="5 0 0 0"/>
                </StackPanel>
            </Button>

            <Button Command="{Binding SaveCommand}">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/WpfUI;component/Resources/tick_mark_24x24.png"
                           Width="20" Height="20"/>
                    <TextBlock Text="Save" Margin="5 0 0 0"/>
                </StackPanel>
            </Button>

            <Button Command="{Binding CancelCommand}">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/WpfUI;component/Resources/clear_24x24.png"
                           Width="20" Height="20"/>
                    <TextBlock Text="Cancel" Margin="5 0 0 0"/>
                </StackPanel>
            </Button>

            <Button Command="{Binding DeleteCommand}">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/WpfUI;component/Resources/delete_24x24.png"
                           Width="20" Height="20"/>
                    <TextBlock Text="Delete" Margin="5 0 0 0"/>
                </StackPanel>
            </Button>

            <Button Command="{Binding RefreshCommand}">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/WpfUI;component/Resources/clock_24x24.png"
                           Width="20" Height="20"/>
                    <TextBlock Text="Refresh" Margin="5 0 0 0"/>
                </StackPanel>
            </Button>

            <Button Command="{Binding CloseCommand}">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/WpfUI;component/Resources/crossed_24x24.png"
                           Width="20" Height="20"/>
                    <TextBlock Text="Close" Margin="5 0 0 0"/>
                </StackPanel>
            </Button>

        </ToolBar>

        <!-- Filters -->
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="10">

            <StackPanel Margin="0 0 20 0">
                <TextBlock Text="Address"/>
                <ComboBox ItemsSource="{Binding Addresses}"
                          SelectedItem="{Binding SelectedAddress}"
                          DisplayMemberPath="Description"
                          Width="200"/>
            </StackPanel>

            <StackPanel>
                <TextBlock Text="Period"/>
                <ComboBox ItemsSource="{Binding PreDefinedPeriods}"
                          SelectedItem="{Binding SelectedPeriod}"
                          DisplayMemberPath="Description"
                          Width="200"/>
            </StackPanel>

        </StackPanel>

        <!-- DataGrid -->
        <DataGrid ItemsSource="{Binding Payments}"
                  SelectedItem="{Binding SelectedPayment}"
                  AutoGenerateColumns="False"
                  Margin="10"
                  IsReadOnly="True">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="60"/>
                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="200"/>
                <DataGridTextColumn Header="Pay Date" Binding="{Binding PayDate}" Width="120"/>
                <DataGridTextColumn Header="Amount" Binding="{Binding Amount}" Width="120"/>
            </DataGrid.Columns>

        </DataGrid>

        <!-- Edit section -->
        <GroupBox Header="Payment" Margin="10">
            <Grid Margin="10">

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Description" Grid.Row="0" Grid.Column="0"/>
                <TextBox Text="{Binding SelectedPayment.Description}"
                         Grid.Row="0" Grid.Column="1"/>

                <TextBlock Text="Pay Date" Grid.Row="1" Grid.Column="0"/>
                <DatePicker SelectedDate="{Binding SelectedPayment.PayDate}"
                            Grid.Row="1" Grid.Column="1"/>

                <TextBlock Text="Amount" Grid.Row="2" Grid.Column="0"/>
                <TextBox Text="{Binding SelectedPayment.Amount}"
                         Grid.Row="2" Grid.Column="1"/>

            </Grid>
        </GroupBox>

    </DockPanel>
</Window>