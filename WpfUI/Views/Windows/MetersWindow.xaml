<Window x:Class="WpfUI.Views.Windows.MetersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Meters"
        Width="1100"
        Height="650"
        WindowStartupLocation="CenterOwner">

    <DockPanel>

        <!-- TOOLBAR -->
        <ToolBar DockPanel.Dock="Top">
            <Button Command="{Binding AddCommand}">
                <Image Source="/Resources/add_24x24.png" Width="20"/>
            </Button>
            <Button Command="{Binding SaveCommand}">
                <Image Source="/Resources/tick-mark_24x24.png" Width="20"/>
            </Button>
            <Button Command="{Binding CancelCommand}">
                <Image Source="/Resources/clear_24x24.png" Width="20"/>
            </Button>
            <Button Command="{Binding DeleteCommand}">
                <Image Source="/Resources/delete_24x24.png" Width="20"/>
            </Button>
            <Button Command="{Binding RefreshCommand}">
                <Image Source="/Resources/clock_24x24.png" Width="20"/>
            </Button>

            <Separator/>

            <Button Command="{Binding CloseCommand}">
                <Image Source="/Resources/crossed_24x24.png" Width="20"/>
            </Button>
        </ToolBar>

        <!-- MAIN CONTENT -->
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- DATAGRID LEFT -->
            <DataGrid Grid.Column="0"
                      ItemsSource="{Binding Meters}"
                      SelectedItem="{Binding SelectedMeter, Mode=TwoWay}"
                      AutoGenerateColumns="False"
                      Margin="0,0,10,0">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="60"/>
                    <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="200"/>
                    <DataGridTextColumn Header="Number" Binding="{Binding Number}" Width="120"/>
                    <DataGridCheckBoxColumn Header="Active" Binding="{Binding Active}" Width="80"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- DETAILS RIGHT -->
            <GroupBox Grid.Column="1" Header="Meter details" Margin="10,0,0,0">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Description -->
                    <TextBlock Text="Description" Grid.Row="0" Grid.Column="0"/>
                    <TextBox Grid.Row="0" Grid.Column="1" Margin="5"
                             Text="{Binding SelectedMeter.Description, Mode=TwoWay}"/>

                    <!-- Number -->
                    <TextBlock Text="Number" Grid.Row="1" Grid.Column="0"/>
                    <TextBox Grid.Row="1" Grid.Column="1" Margin="5"
                             Text="{Binding SelectedMeter.Number, Mode=TwoWay}"/>

                    <!-- Energy Type -->
                    <TextBlock Text="Energy type" Grid.Row="2" Grid.Column="0"/>
                    <ComboBox Grid.Row="2" Grid.Column="1" Margin="5"
                              ItemsSource="{Binding EnergyTypes}"
                              DisplayMemberPath="Name"
                              SelectedValuePath="Id"
                              SelectedValue="{Binding SelectedMeter.EnergyTypeId, Mode=TwoWay}"/>

                    <!-- Address -->
                    <TextBlock Text="Address" Grid.Row="3" Grid.Column="0"/>
                    <ComboBox Grid.Row="3" Grid.Column="1" Margin="5"
                              ItemsSource="{Binding Addresses}"
                              DisplayMemberPath="Description"
                              SelectedValuePath="Id"
                              SelectedValue="{Binding SelectedMeter.AddressId, Mode=TwoWay}"/>

                    <!-- Active -->
                    <TextBlock Text="Active" Grid.Row="4" Grid.Column="0"/>
                    <CheckBox Grid.Row="4" Grid.Column="1" Margin="5"
                              IsChecked="{Binding SelectedMeter.Active, Mode=TwoWay}"/>

                    <!-- Active From -->
                    <TextBlock Text="Active from" Grid.Row="5" Grid.Column="0"/>
                    <DatePicker Grid.Row="5" Grid.Column="1" Margin="5"
                                SelectedDate="{Binding SelectedMeter.ActiveFrom, Mode=TwoWay}"/>
                </Grid>
            </GroupBox>

        </Grid>
    </DockPanel>
</Window>