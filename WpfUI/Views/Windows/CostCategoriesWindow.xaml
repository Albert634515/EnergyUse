<Window x:Class="WpfUI.Views.Windows.CostCategoriesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="Cost Categories" Height="700" Width="1100">

    <DockPanel>

        <!-- Toolbar -->
        <ToolBar DockPanel.Dock="Top">

            <Button Command="{Binding AddCommand}">
                <StackPanel Orientation="Horizontal">
                    <Image Width="20" Height="20"
                           Source="pack://application:,,,/WpfUI;component/Resources/add_24x24.png"/>
                    <TextBlock Text="Add" Margin="5 0 0 0"/>
                </StackPanel>
            </Button>

            <Button Command="{Binding SaveCommand}">
                <StackPanel Orientation="Horizontal">
                    <Image Width="20" Height="20"
                           Source="pack://application:,,,/WpfUI;component/Resources/tick-mark_24x24.png"/>
                    <TextBlock Text="Save" Margin="5 0 0 0"/>
                </StackPanel>
            </Button>

            <Button Command="{Binding CancelCommand}">
                <StackPanel Orientation="Horizontal">
                    <Image Width="20" Height="20"
                           Source="pack://application:,,,/WpfUI;component/Resources/clear_24x24.png"/>
                    <TextBlock Text="Cancel" Margin="5 0 0 0"/>
                </StackPanel>
            </Button>

            <Button Command="{Binding DeleteCommand}">
                <StackPanel Orientation="Horizontal">
                    <Image Width="20" Height="20"
                           Source="pack://application:,,,/WpfUI;component/Resources/delete_24x24.png"/>
                    <TextBlock Text="Delete" Margin="5 0 0 0"/>
                </StackPanel>
            </Button>

            <Button Command="{Binding RefreshCommand}">
                <StackPanel Orientation="Horizontal">
                    <Image Width="20" Height="20"
                           Source="pack://application:,,,/WpfUI;component/Resources/clock_24x24.png"/>
                    <TextBlock Text="Refresh" Margin="5 0 0 0"/>
                </StackPanel>
            </Button>

            <Button Command="{Binding CloseCommand}">
                <StackPanel Orientation="Horizontal">
                    <Image Width="20" Height="20"
                           Source="pack://application:,,,/WpfUI;component/Resources/crossed_24x24.png"/>
                    <TextBlock Text="Close" Margin="5 0 0 0"/>
                </StackPanel>
            </Button>

        </ToolBar>

        <!-- Status bar -->
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem Content="{Binding StatusMessage}" />
        </StatusBar>

        <!-- Main layout -->
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>

            <!-- Left side -->
            <StackPanel Grid.Column="0" Margin="0 0 10 0">

                <TextBlock Text="Energy Type" />
                <ComboBox ItemsSource="{Binding EnergyTypes}"
                          SelectedItem="{Binding SelectedEnergyType}"
                          DisplayMemberPath="Name" />

                <DataGrid ItemsSource="{Binding CostCategories}"
                          SelectedItem="{Binding SelectedCostCategory}"
                          AutoGenerateColumns="False"
                          Margin="0 10 0 0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="60"/>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                        <DataGridTextColumn Header="Sort Order" Binding="{Binding SortOrder}" Width="100"/>
                        <DataGridTextColumn Header="Unit" Binding="{Binding UnitName}" Width="120"/>
                    </DataGrid.Columns>
                </DataGrid>

            </StackPanel>

            <!-- Right side -->
            <GroupBox Header="Cost Category" Grid.Column="1">
                <Grid Margin="10">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Description -->
                    <TextBlock Text="Description" Grid.Row="0" />
                    <TextBox Grid.Row="0" Grid.Column="1"
                             Text="{Binding SelectedCostCategory.Name}" />

                    <!-- Sort Order -->
                    <TextBlock Text="Sort Order" Grid.Row="1" />
                    <TextBox Grid.Row="1" Grid.Column="1"
                             Text="{Binding SelectedCostCategory.SortOrder}" />

                    <!-- Color Picker + Preview -->
                    <TextBlock Text="Color" Grid.Row="2" />

                    <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal">
                        <xctk:ColorPicker 
                            SelectedColor="{Binding SelectedColor, Mode=TwoWay}"
                            ShowStandardColors="True"
                            ShowAvailableColors="True"
                            ShowRecentColors="True"
                            UsingAlphaChannel="False"
                            Width="160"
                            Margin="0 0 10 0"/>

                        <Border Width="40" Height="20" 
                                BorderBrush="Black" BorderThickness="1"
                                Background="{Binding SelectedColor}"/>
                    </StackPanel>

                    <!-- Calculation Type -->
                    <TextBlock Text="Calculation Type" Grid.Row="3" />
                    <ComboBox Grid.Row="3" Grid.Column="1"
                              ItemsSource="{Binding CalculationTypes}"
                              SelectedItem="{Binding SelectedCostCategory.CalculationType}"
                              DisplayMemberPath="Description" />

                    <!-- Energy Subtype -->
                    <TextBlock Text="Energy Subtype" Grid.Row="4" />
                    <ComboBox Grid.Row="4" Grid.Column="1"
                              ItemsSource="{Binding EnergySubTypes}"
                              SelectedItem="{Binding SelectedCostCategory.EnergySubType}"
                              DisplayMemberPath="Description" />

                    <!-- Unit -->
                    <TextBlock Text="Unit" Grid.Row="5" />
                    <ComboBox Grid.Row="5" Grid.Column="1"
                              ItemsSource="{Binding Units}"
                              SelectedItem="{Binding SelectedCostCategory.Unit}"
                              DisplayMemberPath="Description" />

                    <!-- Tariff Group -->
                    <TextBlock Text="Tariff Group" Grid.Row="6" />
                    <ComboBox Grid.Row="6" Grid.Column="1"
                              ItemsSource="{Binding TariffGroups}"
                              SelectedItem="{Binding SelectedCostCategory.TariffGroup}"
                              DisplayMemberPath="Description" />

                    <!-- Start Date -->
                    <TextBlock Text="Start Date" Grid.Row="7" />
                    <DatePicker Grid.Row="7" Grid.Column="1"
                                SelectedDate="{Binding SelectedCostCategory.Start}" />

                    <!-- End Date -->
                    <TextBlock Text="End Date" Grid.Row="8" />
                    <DatePicker Grid.Row="8" Grid.Column="1"
                                SelectedDate="{Binding SelectedCostCategory.End}" />

                    <!-- Checkboxes -->
                    <CheckBox Content="Calculate VAT"
                              Grid.Row="9" Grid.ColumnSpan="2"
                              IsChecked="{Binding SelectedCostCategory.CalculateVat}" />

                    <CheckBox Content="Can Be Negative"
                              Grid.Row="10" Grid.ColumnSpan="2"
                              IsChecked="{Binding SelectedCostCategory.CanNotBeNegative}" />

                    <CheckBox Content="Not Calculate Over Return"
                              Grid.Row="11" Grid.ColumnSpan="2"
                              IsChecked="{Binding SelectedCostCategory.NotCalculateOverReturn}" />

                </Grid>
            </GroupBox>

        </Grid>

    </DockPanel>
</Window>