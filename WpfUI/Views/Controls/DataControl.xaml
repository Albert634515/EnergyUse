<UserControl x:Class="WpfUI.Views.Controls.DataControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="900">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Toolbar -->
            <RowDefinition Height="Auto"/>
            <!-- Filters -->
            <RowDefinition Height="*"/>
            <!-- DataGrid -->
        </Grid.RowDefinitions>

        <!-- ============================
             TOOLBAR
        ============================ -->
        <ToolBar Grid.Row="0">

            <Button Command="{Binding AddCommand}">
                <StackPanel Orientation="Horizontal">
                    <Image Width="20" Height="20"
                           Source="/WpfUI;component/Resources/add_24x24.png"/>
                    <TextBlock Text="Add" Margin="5,0,0,0"/>
                </StackPanel>
            </Button>

            <Button Command="{Binding EditCommand}">
                <StackPanel Orientation="Horizontal">
                    <Image Width="20" Height="20"
                           Source="/WpfUI;component/Resources/editing_24x24.png"/>
                    <TextBlock Text="Edit" Margin="5,0,0,0"/>
                </StackPanel>
            </Button>

            <Button Command="{Binding DeleteCommand}">
                <StackPanel Orientation="Horizontal">
                    <Image Width="20" Height="20"
                           Source="/WpfUI;component/Resources/delete_24x24.png"/>
                    <TextBlock Text="Delete" Margin="5,0,0,0"/>
                </StackPanel>
            </Button>

            <Button Command="{Binding RefreshCommand}">
                <StackPanel Orientation="Horizontal">
                    <Image Width="20" Height="20"
                           Source="/WpfUI;component/Resources/clock_24x24.png"/>
                    <TextBlock Text="Refresh" Margin="5,0,0,0"/>
                </StackPanel>
            </Button>

        </ToolBar>

        <!-- ============================
             FILTERS
        ============================ -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,10,0,10">

            <!-- FROM -->
            <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                <TextBlock Text="From:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <DatePicker SelectedDate="{Binding FromDate}" Width="130"/>
            </StackPanel>

            <!-- TILL -->
            <StackPanel Orientation="Horizontal" Margin="0,0,20,0">
                <TextBlock Text="Till:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <DatePicker SelectedDate="{Binding TillDate}" Width="130"/>
            </StackPanel>

            <!-- ACCUMULATIVE -->
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Accumulative:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <RadioButton Content="Yes"
                             GroupName="Acc"
                             IsChecked="{Binding AccumulativeYes}"/>
                <RadioButton Content="No"
                             GroupName="Acc"
                             Margin="10,0,0,0"
                             IsChecked="{Binding AccumulativeNo}"/>
            </StackPanel>

        </StackPanel>

        <!-- ============================
             DATAGRID
        ============================ -->
        <DataGrid Grid.Row="2"
                  ItemsSource="{Binding MeterReadings}"
                  SelectedItem="{Binding SelectedReading}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  SelectionUnit="FullRow"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  Margin="0">

            <DataGrid.Columns>

                <DataGridTextColumn Header="Registration Date"
                                    Binding="{Binding RegistrationDate, StringFormat=d}"
                                    Width="140"/>

                <DataGridTextColumn Header="Rate Normal"
                                    Binding="{Binding RateNormal}"
                                    Width="120"/>

                <DataGridTextColumn Header="Rate Low"
                                    Binding="{Binding RateLow}"
                                    Width="120"/>

                <DataGridTextColumn Header="Return Delivery Normal"
                                    Binding="{Binding ReturnDeliveryNormal}"
                                    Width="160"/>

                <DataGridTextColumn Header="Return Delivery Low"
                                    Binding="{Binding ReturnDeliveryLow}"
                                    Width="160"/>

                <DataGridTextColumn Header="Delta Normal"
                                    Binding="{Binding DeltaNormal}"
                                    Width="120"/>

                <DataGridTextColumn Header="Delta Low"
                                    Binding="{Binding DeltaLow}"
                                    Width="120"/>

                <DataGridTextColumn Header="Return Delivery Δ Normal"
                                    Binding="{Binding ReturnDeliveryDeltaNormal}"
                                    Width="180"/>

                <DataGridTextColumn Header="Return Delivery Δ Low"
                                    Binding="{Binding ReturnDeliveryDeltaLow}"
                                    Width="180"/>

                <DataGridTextColumn Header="Id"
                                    Binding="{Binding Id}"
                                    Width="80"/>

            </DataGrid.Columns>

        </DataGrid>

    </Grid>
</UserControl>