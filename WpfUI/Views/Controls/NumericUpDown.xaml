<UserControl x:Class="WpfUI.Views.Controls.NumericUpDown"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="28" Width="80">

    <Border BorderBrush="#CCC" BorderThickness="1" CornerRadius="4" Padding="2">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="20"/>
            </Grid.ColumnDefinitions>

            <TextBox Text="{Binding Value, RelativeSource={RelativeSource AncestorType=UserControl}, 
                                    UpdateSourceTrigger=PropertyChanged}"
                     BorderThickness="0"
                     VerticalContentAlignment="Center"/>

            <StackPanel Grid.Column="1" Orientation="Vertical">
                <Button Content="▲" Padding="0" Height="12"
                        Command="{Binding IncreaseCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                <Button Content="▼" Padding="0" Height="12"
                        Command="{Binding DecreaseCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>