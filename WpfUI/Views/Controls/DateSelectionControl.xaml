<UserControl x:Class="WpfUI.Views.Controls.DateSelectionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:WpfUI.Converters">

    <UserControl.Resources>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <!-- Energy type -->
            <ColumnDefinition Width="150"/>
            <!-- Tariff group -->
            <ColumnDefinition Width="140"/>
            <!-- DateFrom -->
            <ColumnDefinition Width="140"/>
            <!-- DateTill -->
            <ColumnDefinition Width="Auto"/>
            <!-- Remove button -->
        </Grid.ColumnDefinitions>

        <!-- Energy type -->
        <StackPanel Grid.Column="0" Margin="0,0,10,0">
            <TextBlock Text="Energy type"/>
            <ComboBox ItemsSource="{Binding EnergyTypeList}"
                      SelectedItem="{Binding SelectedEnergyType}"
                      DisplayMemberPath="Name"/>
        </StackPanel>

        <!-- Tariff group -->
        <StackPanel Grid.Column="1" Margin="0,0,10,0">
            <TextBlock Text="Tariff group"/>
            <ComboBox ItemsSource="{Binding TarifGroupsList}"
                      SelectedItem="{Binding SelectedTariffGroup}"
                      DisplayMemberPath="Description"/>
        </StackPanel>

        <!-- Date from -->
        <StackPanel Grid.Column="2" Margin="0,0,10,0">
            <TextBlock Text="Date from"/>
            <DatePicker SelectedDate="{Binding DateFrom}" Width="110"/>
        </StackPanel>

        <!-- Date till -->
        <StackPanel Grid.Column="3" Margin="0,0,10,0">
            <TextBlock Text="Date till"/>
            <DatePicker SelectedDate="{Binding DateTill}" Width="110"/>
        </StackPanel>

        <!-- Remove button -->
        <Button Grid.Column="4"
                Content="X"
                Width="30"
                Height="30"
                VerticalAlignment="Bottom"
                Command="{Binding RemoveCommand}"
                Visibility="{Binding RemoveButtonVisible, Converter={StaticResource BoolToVisibilityConverter}}"/>
    </Grid>
</UserControl>