<UserControl x:Class="WpfUI.Views.Controls.DateSelectionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:conv="clr-namespace:WpfUI.Converters"
             mc:Ignorable="d">

    <UserControl.Resources>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Energy Type -->
        <StackPanel Grid.Column="0" Margin="0,0,10,0">
            <TextBlock Text="Energy type"/>
            <ComboBox ItemsSource="{Binding EnergyTypeList}"
                      SelectedItem="{Binding SelectedEnergyType}"
                      DisplayMemberPath="Name"
                      SelectedValuePath="Id"/>
        </StackPanel>

        <!-- Tariff Group -->
        <StackPanel Grid.Column="1" Margin="0,0,10,0">
            <TextBlock Text="Tariff group"/>
            <ComboBox ItemsSource="{Binding TarifGroupsList}"
                      SelectedItem="{Binding SelectedTariffGroup}"
                      DisplayMemberPath="Description"
                      SelectedValuePath="Id"/>
        </StackPanel>

        <!-- Date Range -->
        <StackPanel Grid.Column="2" Margin="0,0,10,0">
            <TextBlock Text="Date range"/>
            <StackPanel Orientation="Horizontal">
                <DatePicker SelectedDate="{Binding DateFrom}" Width="120"/>
                <DatePicker SelectedDate="{Binding DateTill}" Width="120" Margin="5,0,0,0"/>
            </StackPanel>
        </StackPanel>

        <!-- Remove button -->
        <Button Grid.Column="3"
                Content="X"
                Width="30"
                Height="30"
                VerticalAlignment="Bottom"
                Command="{Binding RemoveCommand}"
                Visibility="{Binding RemoveButtonVisible, Converter={StaticResource BoolToVisibilityConverter}}"/>
    </Grid>
</UserControl>